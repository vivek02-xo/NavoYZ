<% layout("layouts/boilerplate") %>

<style>
.profile-edit-page {
  min-height: 100vh;
  padding: 8rem 8% 6rem;
  background: linear-gradient(180deg, #ffffff, #f8fafc);
}

.profile-edit-card {
  max-width: 600px;
  margin: auto;
  background: #fff;
  border-radius: 22px;
  padding: 3rem;
  box-shadow: 0 40px 100px rgba(0,0,0,0.08);
}

.profile-edit-card h2 {
  font-family: "Playfair Display", serif;
  font-size: 2.2rem;
  margin-bottom: 2rem;
  text-align: center;
}

.form-group {
  margin-bottom: 1.4rem;
}

.form-group label {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: #64748b;
  display: block;
  margin-bottom: 0.4rem;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 0.8rem 1rem;
  border-radius: 10px;
  border: 1px solid #e5e7eb;
  font-size: 0.95rem;
}

.form-group textarea {
  resize: vertical;
  min-height: 100px;
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #020617;
}

.edit-actions {
  margin-top: 2rem;
  display: flex;
  gap: 1rem;
}

.btn-save {
  flex: 1;
  padding: 0.9rem;
  border-radius: 999px;
  background: #020617;
  color: #fff;
  border: none;
  font-weight: 600;
  cursor: pointer;
}

.btn-cancel {
  flex: 1;
  padding: 0.9rem;
  border-radius: 999px;
  background: #f1f5f9;
  color: #020617;
  text-align: center;
  text-decoration: none;
  font-weight: 600;
}
</style>

<div class="profile-edit-page">
  <form class="profile-edit-card" action="/profile/edit" method="POST">
    <h2>Edit Profile</h2>

    <div class="form-group">
      <label>Name</label>
      <input type="text" name="name" value="<%= user.name %>" required />
    </div>

    <div class="form-group">
      <label>Phone (optional)</label>
      <input
        type="tel"
        name="phone"
        value="<%= user.phone || '' %>"
        placeholder="Optional"
      />
    </div>

    <div class="form-group">
      <label>Bio</label>
      <textarea name="bio"><%= user.bio || '' %></textarea>
    </div>

    <div class="edit-actions">
      <button class="btn-save">Save Changes</button>
      <a href="/profile" class="btn-cancel">Cancel</a>
    </div>
  </form>
</div>
