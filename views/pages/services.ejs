<% layout('layouts/boilerplate') %>
<style>
/* ===== GLOBAL ===== */
/* RESET HELP */
body {
  background: #fafafa;
}

/* ===== HERO (FULL FRAME) ===== */
.services-hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8%;
  background:
    radial-gradient(circle at top left, #e0f2fe, transparent 40%),
    radial-gradient(circle at bottom right, #fef3c7, transparent 45%),
    #ffffff;
}

.hero-inner {
  text-align: center;
  max-width: 900px;
}

.services-hero h1 {
  font-size: 3.6rem;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 1.2rem;
}

.services-hero p {
  font-size: 1.2rem;
  color: #475569;
}

/* ===== GRID ===== */
.services-grid {
  padding: 7rem 8%;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
  gap: 3.5rem;
  background: #f8fafc;
}

/* ===== CARD ===== */
.service-card {
  position: relative;
  padding: 2.8rem;
  background: #ffffff;
  border-radius: 26px;
  text-decoration: none;
  color: #0f172a;
  box-shadow:
    0 20px 40px rgba(15, 23, 42, 0.08),
    inset 0 0 0 1px rgba(15, 23, 42, 0.05);
  transition: transform .5s ease, box-shadow .5s ease;
  
}

/* ===== SCROLL ANIMATION ===== */
.service-card {
  opacity: 0;
  transform: translateY(60px) scale(0.96);
  transition: all .8s cubic-bezier(.22,.61,.36,1);
}

.service-card.show {
  opacity: 1;
  transform: translateY(0) scale(1);
}


.service-card:hover {
  transform: translateY(-16px) scale(1.025);
  box-shadow:
    0 40px 90px rgba(15, 23, 42, 0.15),
    inset 0 0 0 1px rgba(15, 23, 42, 0.08);
}

/* subtle animated glow */
.service-card::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 26px;
  background: linear-gradient(
    120deg,
    transparent,
    rgba(56,189,248,.25),
    transparent
  );
  opacity: 0;
  transition: opacity .6s ease;
}

.service-card:hover::after {
  opacity: 1;
}

/* ===== POPULAR ===== */
.service-card.popular {
  outline: 2px solid #38bdf8;
}

.badge {
  position: absolute;
  top: 22px;
  right: 22px;
  background: #38bdf8;
  color: #ffffff;
  padding: 7px 16px;
  font-size: .75rem;
  border-radius: 999px;
  font-weight: 600;
}

/* ===== TEXT ===== */
.service-card h2 {
  font-size: 2rem;
  margin-bottom: .8rem;
}

.desc {
  color: #475569;
  line-height: 1.65;
  margin-bottom: 1.6rem;
}

/* ===== FEATURES ===== */
.features {
  list-style: none;
  padding: 0;
  margin-bottom: 1.8rem;
}

.features li {
  margin-bottom: .6rem;
  color: #0f172a;
}

/* ===== TECH ===== */
.tech {
  display: flex;
  flex-wrap: wrap;
  gap: .7rem;
  margin-bottom: 2rem;
}

.tech span {
  background: #e2e8f0;
  color: #0f172a;
  padding: 7px 14px;
  border-radius: 999px;
  font-size: .75rem;
}

/* ===== PRICING ===== */
.pricing {
  border-top: 1px solid rgba(15,23,42,.08);
  padding-top: 1.2rem;
  margin-bottom: 1.6rem;
}

.price-line {
  display: flex;
  justify-content: space-between;
  font-size: .95rem;
  margin-bottom: .5rem;
  color: #0f172a;
}

/* ===== CTA ===== */
.cta {
  font-weight: 700;
  color: #0284c7;
  letter-spacing: .4px;
}

/* ===== PAGE LOAD ===== */
.services-hero {
  animation: heroReveal 1.2s ease-out both;
}

@keyframes heroReveal {
  from {
    opacity: 0;
    transform: scale(1.05);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.hero-inner h1 {
  animation: textUp 1s ease-out .3s both;
}

.hero-inner p {
  animation: textUp 1s ease-out .6s both;
}

@keyframes textUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tech span {
  transition: transform .3s ease, box-shadow .3s ease;
}

.tech span:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 20px rgba(15,23,42,.15);
}

.cta {
  display: inline-flex;
  align-items: center;
  gap: .4rem;
  transition: gap .3s ease;
}

.service-card:hover .cta {
  gap: .8rem;
}
.badge {
  animation: badgePulse 2.5s infinite;
}

@keyframes badgePulse {
  0%,100% { transform: scale(1); }
  50% { transform: scale(1.08); }
}


</style>

<section class="services-hero">
  <div class="hero-inner">
    <h1>Services that scale your ideas</h1>
    <p>Design, engineering, automation & AI — built to generate real revenue.</p>
  </div>
</section>


<section class="services-grid">
  <% services.forEach(service => { %>
    <a href="/services/<%= service.slug %>" class="service-card <%= service.isPopular ? 'popular' : '' %>">
      
      <% if(service.isPopular){ %>
        <span class="badge">Popular</span>
      <% } %>

      <h2><%= service.title %></h2>
      <p class="desc"><%= service.description %></p>

      <ul class="features">
        <% service.whatYouGet.slice(0,4).forEach(item => { %>
          <li>✔ <%= item %></li>
        <% }) %>
      </ul>

      <div class="tech">
        <% service.techStack.forEach(t => { %>
          <span><%= t %></span>
        <% }) %>
      </div>

      <div class="pricing">
        <% service.pricing.forEach(p => { %>
          <div class="price-line">
            <strong><%= p.label %></strong>
            <span>
              ₹<%= p.minPrice %>
              <% if(p.maxPrice){ %> – ₹<%= p.maxPrice %> <% } %>
              / <%= p.billingType %>
            </span>
          </div>
        <% }) %>
      </div>

      <div class="cta">
        View Details →
      </div>

    </a>
  <% }) %>
</section>

<script>
  const cards = document.querySelectorAll(".service-card");

  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add("show");
      }
    });
  }, { threshold: 0.2 });

  cards.forEach(card => observer.observe(card));
</script>
