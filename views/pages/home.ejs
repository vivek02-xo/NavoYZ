</style>

<div class="home-page">
<section class="hero ">
  <div class="hero-container reveal hero-exit">
    <h1>
      We build modern websites<br>
      that help businesses grow
    </h1>

    <p>
      We craft powerful digital experiences that don’t just look good — they convert visitors into customers, scale with your growth, and work flawlessly at every stage of your business.
    </p>

    <div class="hero-buttons">
      <a href="/contact" class="btn-primary">Get a Free Call</a>
      <a href="/services" class="btn-secondary">View Services</a>
    </div>
  </div>
</section>

<section class="services-section">
  <div class="services-header reveal">
    <h2>What we do?</h2>
    <p>
      We help businesses build, manage, and grow their digital presence with reliable, scalable, and result-driven solutions.
    </p>
  </div>

  <div class="services-grid">
  <% services.forEach(service => { %>
    <a
      href="/services/<%= service.slug %>"
      class="service-card interactive-card reveal"
    >

      <% if (service.isPopular) { %>
        <span class="service-badge">Popular</span>
      <% } %>

      <h3><%= service.title %></h3>

      <p>
        <%= service.shortDescription %>
      </p>

      <% if (service.pricing && service.pricing.length) { %>
        <div class="service-meta">
          <span>
            From ₹<%= service.pricing[0].minPrice.toLocaleString() %>
          </span>
          <span class="arrow">→</span>
        </div>
      <% } %>

    </a>
  <% }) %>
</div>



  <div class="services-cta reveal">
    <a href="/services" class="btn-services">
  Explore All Services →
</a>

  </div>
</section>


<section class="showcase-frame">
  <div class="showcase-content reveal showcase-exit">

    <div class="showcase-text">
      <h2>Built to perform.<br>Designed to convert.</h2>
      <p>
        From high-converting landing pages to scalable platforms,
        we build digital products that drive real growth.
      </p>

      <a href="/services" class="btn-services">
        Explore Our Services →
      </a>
    </div>

    <div class="showcase-media">
      <video autoplay muted loop playsinline>
        <source src="src/home-video.mp4" type="video/mp4">
      </video>
    </div>

  </div>
</section>




<section class="cta-frame">
  <div class="cta-content reveal cta-exit">
    <h2>Have an idea?<br>Let’s build it properly.</h2>

    <p>
      Tell us what you’re planning. We’ll help you turn it into a fast,
      scalable, and reliable digital product.
    </p>

    <a href="/contact" class="btn-cta">
      Get a Free Strategy Call →
    </a>
  </div>
</section>




</div>

<script>
  /* ===== ENTRANCE ===== */
  const reveals = document.querySelectorAll(".reveal");

  const revealObserver = new IntersectionObserver(
    entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("active");
        }
      });
    },
    { threshold: 0.4 }
  );

  reveals.forEach(el => revealObserver.observe(el));

  /* ===== EXIT ===== */
  const hero = document.querySelector(".hero");
  const heroContent = document.querySelector(".hero-exit");

  window.addEventListener("scroll", () => {
    const heroHeight = hero.offsetHeight;
    const scrollY = window.scrollY;

    if (scrollY <= heroHeight) {
      const progress = scrollY / heroHeight;

      heroContent.style.transform =
        `translateY(${-progress * 60}px) scale(${1 - progress * 0.03})`;

      heroContent.style.opacity =
        `${1 - progress}`;
    }
  });

  document.querySelectorAll(".service-card").forEach((card, i) => {
    card.style.transitionDelay = `${i * 0.12}s`;
  });




  const showcase = document.querySelector(".showcase-frame");
  const showcaseContent = document.querySelector(".showcase-exit");

  window.addEventListener("scroll", () => {
    const rect = showcase.getBoundingClientRect();
    const windowHeight = window.innerHeight;

    if (rect.top < windowHeight && rect.bottom > 0) {
      const progress = 1 - rect.bottom / windowHeight;

      showcaseContent.style.transform =
        `translateY(${progress * 50}px)`;

      showcaseContent.style.opacity =
        `${1 - progress * 0.8}`;
    }
  });

  const cta = document.querySelector(".cta-frame");
  const ctaContent = document.querySelector(".cta-exit");

  window.addEventListener("scroll", () => {
    const rect = cta.getBoundingClientRect();
    const windowHeight = window.innerHeight;

    if (rect.top < windowHeight && rect.bottom > 0) {
      const progress = 1 - rect.bottom / windowHeight;

      ctaContent.style.transform =
        `translateY(${progress * 40}px)`;

      ctaContent.style.opacity =
        `${1 - progress}`;
    }
  });

  document.querySelectorAll(".interactive-card").forEach(card => {
    card.addEventListener("mousemove", e => {
      const rect = card.getBoundingClientRect();
      card.style.setProperty(
        "--mx",
        `${e.clientX - rect.left}px`
      );
      card.style.setProperty(
        "--my",
        `${e.clientY - rect.top}px`
      );
    });
  });

</script>
