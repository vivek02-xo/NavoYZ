<% layout("layouts/boilerplate") %>

<style>
/* ===== PAGE ===== */
.admin-page {
  padding: 8rem 8%;
  min-height: 100vh;
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
}

/* ===== HEADER ===== */
.page-head {
  max-width: 900px;
  margin-bottom: 3rem;
}

.page-head h1 {
  font-family: "Playfair Display", serif;
  font-size: 2.6rem;
  margin-bottom: .4rem;
}

.page-head p {
  color: #64748b;
  font-size: 1.05rem;
}

/* ===== CARD ===== */
.form-card {
  max-width: 900px;
  background: #ffffff;
  padding: 3.5rem;
  border-radius: 26px;
  box-shadow: 0 40px 120px rgba(0,0,0,.08);
}

/* ===== GROUP ===== */
.form-group {
  margin-bottom: 1.8rem;
}

.form-group label {
  display: block;
  font-size: .85rem;
  font-weight: 600;
  color: #020617;
  margin-bottom: .45rem;
  letter-spacing: .03em;
  text-transform: uppercase;
}

.form-group input,
.form-group textarea,
.form-group select {
  width: 100%;
  padding: .75rem 1.1rem;
  border-radius: 14px;
  border: 1px solid #e5e7eb;
  font-size: .95rem;
  outline: none;
}

.form-group textarea {
  resize: vertical;
  min-height: 120px;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  border-color: #020617;
}

/* ===== GRID ===== */
.grid-2 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

@media (max-width: 768px) {
  .grid-2 {
    grid-template-columns: 1fr;
  }
}

/* ===== SECTION DIVIDER ===== */
.section-divider {
  margin: 3rem 0 2rem;
  border-top: 1px solid #e5e7eb;
  padding-top: 2.5rem;
}

.section-title {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 1.2rem;
}

/* ===== BUTTON ===== */
.submit-btn {
  margin-top: 2.5rem;
  background: #020617;
  color: #ffffff;
  padding: .9rem 2.4rem;
  border-radius: 999px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: transform .25s ease, box-shadow .25s ease;
}

.submit-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 18px 45px rgba(2,6,23,.25);
}

.admin-page {
  padding: 8rem 8%;
  min-height: 100vh;
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  display: flex;
  justify-content: center;
}

.admin-page > * {
  width: 100%;
}
.admin-container {
  width: 100%;
  max-width: 980px;
}


</style>

<div class="admin-page">
    <div class="admin-container">

  <!-- HEADER -->
  <div class="page-head">
    <h1>Create New Service</h1>
    <p>Define how this service appears, works, and converts users.</p>
  </div>

  <!-- FORM -->
  <div class="form-card">
    <form action="/admin/services" method="POST">

      <!-- BASIC INFO -->
      <div class="section-title">Basic Information</div>

      <div class="form-group">
        <label>Service Title *</label>
        <input type="text" name="service[title]" required placeholder="Website Development" />
      </div>

      <div class="form-group">
        <label>Slug *</label>
        <input type="text" name="service[slug]" required placeholder="website-development" />
      </div>

      <div class="form-group">
        <label>Short Description *</label>
        <textarea name="service[shortDescription]" required placeholder="Short pitch shown on cards & hero"></textarea>
      </div>

      <div class="form-group">
        <label>Long Description</label>
        <textarea name="service[longDescription]" placeholder="Detailed explanation of the service"></textarea>
      </div>

      <!-- CATEGORY -->
      <div class="section-divider">
        <div class="section-title">Category</div>

        <div class="form-group">
          <label>Service Category *</label>
          <select name="service[category]" required>
            <option value="">Select category</option>
            <option value="website">Website</option>
            <option value="automation">Automation</option>
            <option value="ai">AI</option>
            <option value="ecommerce">E-commerce</option>
            <option value="maintenance">Maintenance</option>
            <option value="consulting">Consulting</option>
            <option value="saas">SaaS</option>
          </select>
        </div>
      </div>

      <!-- PRICING -->
      <div class="section-divider">
        <div class="section-title">Pricing (Optional)</div>

        <div class="grid-2">
          <div class="form-group">
            <label>Pricing Label</label>
            <input type="text" name="service[pricing][0][label]" placeholder="Starter / Pro / Enterprise" />
          </div>

          <div class="form-group">
            <label>Billing Type</label>
            <select name="service[pricing][0][billingType]">
              <option value="one-time">One-time</option>
              <option value="monthly">Monthly</option>
              <option value="hourly">Hourly</option>
            </select>
          </div>

          <div class="form-group">
            <label>Minimum Price</label>
            <input type="number" name="service[pricing][0][minPrice]" placeholder="5000" />
          </div>

          <div class="form-group">
            <label>Maximum Price</label>
            <input type="number" name="service[pricing][0][maxPrice]" placeholder="15000" />
          </div>
        </div>
      </div>

      <!-- SUBMIT -->
      <button type="submit" class="submit-btn">
        Create Service â†’
      </button>

    </form>
  </div>
  </div>

</div>
