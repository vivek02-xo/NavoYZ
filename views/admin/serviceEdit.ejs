<% layout("layouts/boilerplate") %>

<style>
/* ===== PAGE ===== */
.admin-page {
  padding: 8rem 8%;
  min-height: 100vh;
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  display: flex;
  justify-content: center;
}

.admin-container {
  width: 100%;
  max-width: 980px;
}

/* ===== HEADER ===== */
.page-head {
  margin-bottom: 3rem;
}

.page-head h1 {
  font-family: "Playfair Display", serif;
  font-size: 2.6rem;
  margin-bottom: .4rem;
}

.page-head p {
  color: #64748b;
  font-size: 1.05rem;
}

/* ===== CARD ===== */
.form-card {
  background: #ffffff;
  padding: 3.5rem;
  border-radius: 26px;
  box-shadow: 0 40px 120px rgba(0,0,0,.08);
}

/* ===== GROUP ===== */
.form-group {
  margin-bottom: 1.8rem;
}

.form-group label {
  display: block;
  font-size: .85rem;
  font-weight: 600;
  color: #020617;
  margin-bottom: .45rem;
  letter-spacing: .03em;
  text-transform: uppercase;
}

.form-group input,
.form-group textarea,
.form-group select {
  width: 100%;
  padding: .75rem 1.1rem;
  border-radius: 14px;
  border: 1px solid #e5e7eb;
  font-size: .95rem;
  outline: none;
}

.form-group textarea {
  resize: vertical;
  min-height: 120px;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  border-color: #020617;
}

/* ===== GRID ===== */
.grid-2 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

@media (max-width: 768px) {
  .grid-2 {
    grid-template-columns: 1fr;
  }
}

/* ===== DIVIDER ===== */
.section-divider {
  margin: 3rem 0 2rem;
  border-top: 1px solid #e5e7eb;
  padding-top: 2.5rem;
}

.section-title {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 1.2rem;
}

/* ===== ACTIONS ===== */
.actions {
  margin-top: 3rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1rem;
}

.save-btn {
  background: #020617;
  color: #ffffff;
  padding: .9rem 2.4rem;
  border-radius: 999px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: transform .25s ease, box-shadow .25s ease;
}

.save-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 18px 45px rgba(2,6,23,.25);
}

.delete-btn {
  background: #fee2e2;
  color: #991b1b;
  padding: .8rem 1.8rem;
  border-radius: 999px;
  border: none;
  font-weight: 600;
  cursor: pointer;
}
</style>

<div class="admin-page">
  <div class="admin-container">

    <!-- HEADER -->
    <div class="page-head">
      <h1>Edit Service</h1>
      <p>Update content, pricing, and visibility for this service.</p>
    </div>

    <!-- FORM -->
    <div class="form-card">
      <form
        action="/admin/services/<%= service._id %>?_method=PUT"
        method="POST"
      >

        <!-- BASIC -->
        <div class="section-title">Basic Information</div>

        <div class="form-group">
          <label>Service Title *</label>
          <input
            type="text"
            name="service[title]"
            value="<%= service.title %>"
            required
          />
        </div>

        <div class="form-group">
          <label>Slug *</label>
          <input
            type="text"
            name="service[slug]"
            value="<%= service.slug %>"
            required
          />
        </div>

        <div class="form-group">
          <label>Short Description *</label>
          <textarea
            name="service[shortDescription]"
            required
          ><%= service.shortDescription %></textarea>
        </div>

        <div class="form-group">
          <label>Long Description</label>
          <textarea name="service[longDescription]"><%= service.longDescription || "" %></textarea>
        </div>

        <!-- CATEGORY -->
        <div class="section-divider">
          <div class="section-title">Category</div>

          <div class="form-group">
            <label>Service Category *</label>
            <select name="service[category]" required>
              <% const categories = ["website","automation","ai","ecommerce","maintenance","consulting","saas"]; %>
              <% categories.forEach(cat => { %>
                <option
                  value="<%= cat %>"
                  <%= service.category === cat ? "selected" : "" %>
                >
                  <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
                </option>
              <% }) %>
            </select>
          </div>
        </div>

        <!-- PRICING -->
        <div class="section-divider">
          <div class="section-title">Pricing</div>

          <div class="grid-2">
            <div class="form-group">
              <label>Pricing Label</label>
              <input
                type="text"
                name="service[pricing][0][label]"
                value="<%= service.pricing?.[0]?.label || "" %>"
              />
            </div>

            <div class="form-group">
              <label>Billing Type</label>
              <select name="service[pricing][0][billingType]">
                <% ["one-time","monthly","hourly"].forEach(type => { %>
                  <option
                    value="<%= type %>"
                    <%= service.pricing?.[0]?.billingType === type ? "selected" : "" %>
                  >
                    <%= type %>
                  </option>
                <% }) %>
              </select>
            </div>

            <div class="form-group">
              <label>Min Price</label>
              <input
                type="number"
                name="service[pricing][0][minPrice]"
                value="<%= service.pricing?.[0]?.minPrice || "" %>"
              />
            </div>

            <div class="form-group">
              <label>Max Price</label>
              <input
                type="number"
                name="service[pricing][0][maxPrice]"
                value="<%= service.pricing?.[0]?.maxPrice || "" %>"
              />
            </div>
          </div>
        </div>

        <!-- ACTIONS -->
        <div class="actions">
          <button type="submit" class="save-btn">
            Save Changes â†’
          </button>

          <form
            action="/admin/services/<%= service._id %>?_method=DELETE"
            method="POST"
            onsubmit="return confirm('Delete this service permanently?')"
          >
            <button class="delete-btn" type="submit">
              Delete Service
            </button>
          </form>
        </div>

      </form>
    </div>

  </div>
</div>
